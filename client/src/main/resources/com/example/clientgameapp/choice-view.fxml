<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane prefWidth="600" prefHeight="600"
        xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.example.clientgameapp.controllers.lobby.ChoiceController">

    <stylesheets>
        <URL value="@styles/main.css"/>
    </stylesheets>
    <center>

        <FlowPane vgap="10" alignment="CENTER" columnHalignment="CENTER" hgap="10" orientation="VERTICAL" prefHeight="600"
        >
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Label alignment="CENTER" contentDisplay="BOTTOM" prefHeight="62.0" prefWidth="368.0"
                   text="What do you want to do?"
                   textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>


            <Button styleClass="btn-main-navigation" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#connectToRoom" text="Connect to existing room">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button styleClass="btn-main-navigation" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#createRoom" text="Create a room">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
            <Button styleClass="btn-main-navigation" contentDisplay="BOTTOM" mnemonicParsing="false" onAction="#openProfile" text="Open profile">
                <font>
                    <Font size="15.0"/>
                </font>
            </Button>
        </FlowPane>

    </center>
</BorderPane>